# .env.example
# Copia este archivo a .env y configura tus valores

# --- CONFIGURACIÓN GENERAL ---
# Pon esto en 'false' para enviar mensajes reales
NOTIFICATION_MOCK_MODE=false

# --- CONFIGURACIÓN DE EMAIL (Ejemplo para Gmail) ---
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=tu_email@gmail.com
# IMPORTANTE: Para Gmail, debes usar una "Contraseña de Aplicación", no tu contraseña normal.
# Ve a: Cuenta de Google > Seguridad > Verificación en 2 pasos > Contraseñas de aplicaciones
EMAIL_APP_PASSWORD="tu_contraseña_de_aplicación"
EMAIL_FROM_NAME=Nexus Floor Control

# --- CONFIGURACIÓN DE WHATSAPP (Meta for Developers) ---
# Necesitas una cuenta en developers.facebook.com configurada con WhatsApp API
WHATSAPP_API_VERSION=v18.0
WHATSAPP_PHONE_ID="tu_phone_id"
WHATSAPP_ACCESS_TOKEN="tu_access_token"

# --- CONFIGURACIÓN DE OPENAI ---
OPENAI_API_KEY="tu_openai_api_key"
